<!DOCTYPE html>
<html>
<head>
  <title>Smbit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/header" %>
  <div class="container">
    
    
    
    <!-- Bootstrap notification messages -->
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <% flash.each do |key, value| %>
          <% if key != "alert" %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
              <%= value %>
            </div> 
          <% elsif key != "notice" %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
              <%= value %>
            </div>
          <% else %>
            <div class="alert alert-<%= key %> alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
              <%= value %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <%= yield %>
    
  </div>
  
  <!-- Footer -->
  <div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
    <div class="container">
        <p class="white-text navbar-text pull-left">&copy SMB IT 2015</p>
        
        <% if current_user %>
          <p><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-text pull-right" %><%= link_to "Dashboard", rails_admin_path, class: "navbar-text pull-right" %></p>

        <% else %>
            <p> <%= link_to "Admin", new_user_session_path, class: "navbar-text pull-right" %> </p>
        <% end %>

    </div>
  </div>

</body>
</html>
